// const degree =
//   'Masters in Informatics Engineering - Graphic Systems and Multimedia';
// const school = 'ISEP';
// const schoolLink = 'https://www.isep.ipp.pt/';
---

<section id="about-text">
    <p>
        My name is <strong> {name}</strong>, live in {city}.
    </p>
    <p>
        {job},
        <strong> with {exp} years</strong> of professional experience.
    </p>
    <p>
        {degree}
        at
        <a href={schoolURL} target="_blank">{school}</a>.
    </p>
</section>

<style>
    #about-text {
        background-color: var(--bg-color-primary);
        padding: 2rem;
        line-height: 3;
        border-left: 2rem solid var(--bg-color-secundary);
    }
</style>
