---
export interface Props {
    values: {
        name: string;
        city: string;
        job: string;
        exp: string;
        degree: string;
        school: string;
        schoolURL: string;
    };
}

const { values } = Astro.props;

const { name, city, job, exp, degree, school, schoolURL } = values;
// const name = 'Agostinho Monteiro';
// const city = 'Porto ( Portugal )';
// const job = 'Software Engineer | Web Developer ( Full-Stack )';
