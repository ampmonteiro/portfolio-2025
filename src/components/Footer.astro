---
const dd = new Date();
const current_year = dd.getFullYear();

const year_created =
    current_year === 2025 ? '2025' : '2025 - ' + current_year;

const current_month = dd.getMonth() + 1;
const updated = `${current_year}-${current_month <= 9 ? '0' + current_month : current_month}`;
---

<footer id="main-footer">
    <section class="container">
        <p>
            &copy; {year_created} | Developed by:
            <span> Agostinho Monteiro</span>
        </p>
        <p>Last update: {updated}</p>
        <p>
            Generated by:
            <a
                href="https://astro.build/"
                target="_blank"
                class="framework"
                title="visit AstroJS"
            >
                {Astro.generator}
            </a>
        </p>
        <p>
            Icons by
            <a
                class="bootstrap-icons"
                href="https://icons.getbootstrap.com/"
                target="_blank"
                title="visit bootstrap icons"
            >
                Bootstrap Icons
            </a>
        </p>
    </section>
</footer>

<style>
    /* FOOTER */
    #main-footer {
        max-height: 15rem;
    }

    #main-footer a,
    #main-footer p {
        font-size: 1.4rem;
    }

    #main-footer section {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        height: 100%;
        padding-block: 2rem;
        gap: 1rem 13rem;
    }

    #main-footer a.bootstrap-icons {
        color: #2c5eda;
    }

    #main-footer a.bootstrap-icons:hover {
        color: var(--link-text-color);
    }

    #main-footer .framework {
        color: #e5b60d;
        font-weight: 600;
    }

    #main-footer .framework:hover {
        color: #7c6404;
        font-weight: 600;
    }

    @media only screen and (min-width: 810px) {
        #main-footer section {
            justify-content: space-around;
            flex-wrap: nowrap;
        }
    }
</style>
